rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Items collection rules
    match /items/{itemId} {
      // Anyone can read items
      allow read: if true;
      
      // Only authenticated users can create items
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;
      
      // Owner can update/delete OR authenticated users can decrease quantity
      allow update: if request.auth != null 
                    && (request.auth.uid == resource.data.userId
                        || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['quantity'])
                            && request.resource.data.quantity < resource.data.quantity));
      
      allow delete: if request.auth != null 
                    && request.auth.uid == resource.data.userId;
    }
    
    // Orders collection rules
    match /orders/{orderId} {
      // Allow any authenticated user to read orders (for development)
      allow read: if request.auth != null;
      // Authenticated users can create orders
      allow create: if request.auth != null
                    && request.resource.data.buyerId == request.auth.uid;
      // Buyer or any seller can update the order (for status changes)
      allow update: if request.auth != null 
                    && (request.auth.uid == resource.data.buyerId
                        || (resource.data.sellerIds is list && resource.data.sellerIds.hasAny([request.auth.uid])));
    }
    
    // Notifications collection rules
    match /notifications/{notificationId} {
      // Allow any authenticated user to read, get, and list notifications
      allow read, get, list: if request.auth != null;
      // Authenticated users can create notifications
      allow create: if request.auth != null;
      // Users can update their own notifications (for marking as read)
      allow update: if request.auth != null 
                    && request.auth.uid == resource.data.userId;
    }
    
    // User info collection rules
    match /user-info/{userId} {
      // Users can read any user info (for displaying seller profiles)
      allow read: if true;
      
      // Users can only create/update their own info
      allow create, update: if request.auth != null 
                            && request.auth.uid == userId;
    }
  }
}

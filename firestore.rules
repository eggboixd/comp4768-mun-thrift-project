rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Items collection rules
    match /items/{itemId} {
      // Anyone can read items
      allow read: if true;
      
      // Only authenticated users can create items
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;
      
      // Only the owner can update or delete their items
      allow update, delete: if request.auth != null 
                            && request.auth.uid == resource.data.userId;
    }
    
    // Orders collection rules
    match /orders/{orderId} {
      // Users can read their own orders (as buyer)
      allow read: if request.auth != null 
                  && request.auth.uid == resource.data.buyerId;
      
      // Authenticated users can create orders
      allow create: if request.auth != null
                    && request.resource.data.buyerId == request.auth.uid;
      
      // Only the buyer can update their order
      allow update: if request.auth != null 
                    && request.auth.uid == resource.data.buyerId;
    }
    
    // User info collection rules
    match /user-info/{userId} {
      // Users can read any user info (for displaying seller profiles)
      allow read: if true;
      
      // Users can only create/update their own info
      allow create, update: if request.auth != null 
                            && request.auth.uid == userId;
    }
  }
}

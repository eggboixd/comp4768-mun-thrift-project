rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all item images
    // Only authenticated users can upload, and only to their own folder
    match /items/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Profile images
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User images (legacy path for profile images)
    match /user-images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
